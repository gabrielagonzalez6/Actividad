<div class="row">
  <div class="col-lg-12">
        <h1 class="page-header"></h1>
    </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
              Registros
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <%if @read_files.empty?  %>
                  <div class="alert alert-warning" role="alert">
                    <span class="sr-only">Alerta:</span>
                    Aún no existen alertas
                  </div>
                <% else %>
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables">
                    <thead>
                        <tr>
                            <th class="text-center">Fecha</th>
                            <th class="text-center">Núm. Referencia</th>
                            <th class="text-center">Descripción</th>
                            <th class="text-center">Importe</th>
                            <th class="text-center">Saldo</th>
                            <th class="text-center" colspan="1">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                      <% @read_files.each do |read_file| %>
                        <tr>
                          <td><%= read_file.fecha %></td>
                          <td><%= read_file.referencia %></td>
                          <td><%= read_file.descripcion %></td>
                          <td><%= read_file.monto %></td>
                          <td><%= read_file.saldo %></td>
                          <td class="text-center">
                              <%= link_to read_file, method: :delete, data: { confirm: '¿Desea eliminar el registro?' } do %>
                                <i class="fa fa-trash fa-fw fa-lg"></i>
                              <% end %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                </table>
                 <% end %>
                <!-- /.table-responsive -->
                <div class="text-center">
                  <hr/>
                  <%= link_to 'Cargar Archivo', new_read_file_path, :class => 'btn btn-primary' %>
                </div>   
            </div>
                        <!-- /.panel-body -->
        </div>
                    <!-- /.panel -->
    </div>
                <!-- /.col-lg-12 -->
</div>
