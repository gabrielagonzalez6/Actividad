
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Registrarse</h3>
        </div>
        <div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <fieldset>
                <div class="form-group">
                  <%= f.input :email, label: '*Correo electrónico', placeholder: 'ejemplo@condominet.com', autofocus: true %>
                </div>
                <div class="form-group">
                  <%= f.input :password, label: '*Contraseña',  placeholder: 'Contraseña', hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length) %>
                </div>
                <div class="form-group">
                  <%= f.input :password_confirmation, label: '*Confirmar Contraseña', placeholder: 'Vuelva a introducir la contraseña' %>
                </div>                
                <div class="form-actions">
                  <%= f.button :submit, "Registrarse", :class => 'btn btn-lg btn-success btn-block' %>
                </div>
              </fieldset>
            </div> <!-- Form Inputs -->
          <% end %>
          <hr/>
          <%= render "models/shared/links" %>
        </div> <!-- Panel Body -->
      </div> <!-- Login Panel -->
    </div> <!-- col -->
  </div> <!-- row -->
</div> <!-- container -->

